<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:scaleType="centerInside"
            android:src="@drawable/input_image"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btn_capture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@null"
            android:onClick="clickCameraButton"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/photo_btn" />

        <ImageButton
            android:id="@+id/btn_analyze"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@null"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/medicineresult_btn"
            android:onClick="clickImageAnalyzeButton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btn_myData"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@null"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mydata_btn"
            android:onClick="clickMyDataButton"/>

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@null"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/user_btn"
            android:onClick="clickSettingButton"/>
    </LinearLayout>


</LinearLayout>